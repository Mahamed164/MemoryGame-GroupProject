<Application
    x:Class="SUP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gameVM="clr-namespace:SUP.ViewModels"
    xmlns:gameView="clr-namespace:SUP.Views"
    xmlns:local="clr-namespace:SUP"
    xmlns:scoreVM="clr-namespace:SUP.ViewModels.Scores"
    xmlns:scoreView="clr-namespace:SUP.Views.Scores">
    <Application.Resources>

        <DataTemplate DataType="{x:Type gameVM:StartViewModel}">
            <gameView:StartView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type gameVM:BoardViewModel}">
            <gameView:BoardView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type gameVM:EndViewModel}">
            <gameView:EndView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type gameVM:HighScoreViewModel}">
            <gameView:HighScoreView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type scoreVM:SaveScoreViewModel}">
            <scoreView:SaveScoreView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type gameVM:RulesViewModel}">
            <gameView:RulesView />
        </DataTemplate>

    </Application.Resources>
</Application>
