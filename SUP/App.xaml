<Application
    x:Class="SUP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gameVM="clr-namespace:SUP.ViewModels"
    xmlns:gameView="clr-namespace:SUP.Views"
    xmlns:local="clr-namespace:SUP"
    StartupUri="MainWindow.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type gameVM:StartViewModel}">
            <gameView:StartView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type gameVM:MemoryBoardViewModel}">
            <gameView:BoardView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type gameVM:EndViewModel}">
            <gameView:EndView />
        </DataTemplate>

    </Application.Resources>
</Application>
