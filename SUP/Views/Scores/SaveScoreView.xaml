<UserControl
    x:Class="SUP.Views.Scores.SaveScoreView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views.Scores"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#FFE689B4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
       
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock Width="100" Height="40" Text="{Binding NumOfMoves}" TextAlignment="Center"/>
            <TextBlock Width="100" Height="40" Text="{Binding NumOfMisses}" TextAlignment="Center"/>
            <TextBlock Width="100" Height="40" Text="{Binding FullTimerText}" TextAlignment="Center"/>
        </StackPanel>






        <Button
            Grid.Row="2"
            Width="200"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding SaveCurrentScoreCmd}"
            Content="Spara poäng" />

        <Button
            Grid.Row="2"
            HorizontalAlignment="Left"
            Margin="150,0,0,0"
Width="100"
Height="40"
Background="Orange"
Command="{Binding HighScoreCmd}"
Content="Visa topplista" />
        
        
    </Grid>
</UserControl>
