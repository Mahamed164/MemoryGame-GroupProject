<UserControl
    x:Class="SUP.Views.BoardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SUP.Views.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SUP.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:FaceUpImageConverter x:Key="FaceUpImageConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ViewDesign/background.png" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image
            Grid.Row="0"
            Grid.RowSpan="3"
            MaxWidth="300"
            MaxHeight="80"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/Assets/ViewDesign/memorylogo.png" />
        <TextBlock
            Grid.Row="0"
            Width="114"
            Height="50"
            Margin="0,3,2,25"
            HorizontalAlignment="Right"
            FontFamily="Bahnschrift Condensed"
            FontSize="40"
            Text="{Binding TimerText, FallbackValue=99:99}" />
        <Label
            Grid.Row="1"
            Margin="30,75,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{Binding PlayerOneLabel, FallbackValue=Spelarens namn}"
            FontFamily="Bahnschrift"
            FontSize="13"
            FontWeight="{Binding PlayerOneHighlighted, FallbackValue=normal}" />
        <Label
            Grid.Row="1"
            Margin="30,175,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{Binding PlayerTwoLabel, FallbackValue=Spelarens namn}"
            FontFamily="Bahnschrift"
            FontSize="13"
            FontWeight="{Binding PlayerTwoHighlighted, FallbackValue=normal}" />
        <Button
            Grid.Row="2"
            Width="100"
            Height="40"
            Margin="125,0,0,8"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="ForestGreen"
            BorderBrush="Transparent"
            Command="{Binding RestartCmd}"
            Content="Börja om"
            FontFamily="Bahnschrift Condensed"
            FontSize="16"
            Foreground="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20" />
                </Style>
            </Button.Resources>
        </Button>
        <Button
            Grid.Row="2"
            Width="100"
            Height="40"
            Margin="0,0,125,8"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="CornflowerBlue"
            BorderBrush="Transparent"
            Command="{Binding BackToStartCmd}"
            Content="Startmeny"
            FontFamily="Bahnschrift Condensed"
            FontSize="16"
            Foreground="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20" />
                </Style>
            </Button.Resources>
        </Button>
        <Viewbox
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="Uniform">
            <Grid>
                <Border x:Name="Radius" CornerRadius="20" />
                <ItemsControl ItemsSource="{Binding Cards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Background="#FFFFFF"
                                BorderBrush="Transparent"
                                Command="{Binding ClickCommand}">
                                <Button.Content>
                                    <Border CornerRadius="20">
                                        <Image
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Stretch="Uniform">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource FaceUpImageConverter}">
                                                    <Binding Path="FaceUp" />
                                                    <Binding Path="Image" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                    </Border>
                                </Button.Content>
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="Margin" Value="7" />
                                        <Setter Property="CornerRadius" Value="20" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <!--  MiltiValueConverting  -->
                            <!--  https://learn.microsoft.com/en-us/dotnet/api/system.windows.data.multibinding?view=windowsdesktop-9.0  -->
                            <!--  https://stackoverflow.com/questions/7078820/implementing-imultivalueconverter-to-convert-between-units  -->

                            <!--  källa binding . = https://learn.microsoft.com/en-us/dotnet/api/system.windows.data.binding.path?view=windowsdesktop-9.0  -->
                            <!--  Optionally, a period (.) path can be used to bind to the current source.  -->
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>