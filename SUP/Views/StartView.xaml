<UserControl
    x:Class="SUP.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SUP.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
       
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ViewDesign/background.png" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>

        <Image
            Grid.Row="0"
            Grid.RowSpan="3"
            MaxWidth="300"
            MaxHeight="80"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/Assets/ViewDesign/memorylogo.png" />


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <RadioButton
                    x:Name="rbtnSingle"
                    Grid.Row="1"
                    Margin="0,70,0,5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="En spelare"
                    FlowDirection="RightToLeft"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    GroupName="Multiplayer"
                    IsChecked="{Binding IsSinglePlayerSelected}" />

                <RadioButton
                    x:Name="rbtnMulti"
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Två spelare"
                    FlowDirection="RightToLeft"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    GroupName="Multiplayer"
                    IsChecked="{Binding IsMultiplayerSelected}" />

                <ListBox
                    x:Name="lstPlayers"
                    Grid.Row="1"
                    Width="Auto"
                    HorizontalAlignment="Right"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="18"
                    Foreground="Purple"
                    ItemsSource="{Binding PlayerList}"
                    SelectedItem="{Binding PlayerName}"
                    Visibility="{Binding ShowList}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>


            <StackPanel Grid.Row="0" Grid.Column="1">
                <TextBlock
                    Margin="15,30,15,10"
                    HorizontalAlignment="Center"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="25"
                    Foreground="White"
                    Text="{Binding Greeting, UpdateSourceTrigger=PropertyChanged, FallbackValue=Spelarnamn:}"
                    TextWrapping="Wrap" />

                <Border
                    Height="50"
                    Margin="20,-5,20,10"
                    Background="FloralWhite"
                    BorderBrush="HotPink"
                    BorderThickness="3"
                    CornerRadius="10">

                    <TextBox
                        x:Name="txtPlayerName"
                        Height="40"
                        Margin="20,7.5,20,10"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        FontSize="20"
                        SelectionBrush="Transparent"
                        Text="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style />
                        </TextBox.Style>

                    </TextBox>
                </Border>

                <Label
                    Grid.Column="1"
                    Width="auto"
                    Margin="0,10,0,10"
                    HorizontalAlignment="Center"
                    Content="{Binding PlayerNameMessage}"
                    Foreground="MediumVioletRed" />

                <Label
                    Grid.Column="1"
                    Width="auto"
                    Margin="0,10,0,10"
                    HorizontalAlignment="Center"
                    Content="{Binding MultiPlayerNameMessage}"
                    Foreground="MediumVioletRed" />

                <Button
                    x:Name="btnAddPlayer"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="150"
                    Height="40"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="DodgerBlue"
                    BorderBrush="Transparent"
                    Command="{Binding AddPlayerCmd}"
                    Content="Lägg till spelare"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    Visibility="{Binding ShowList}">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    x:Name="btnRemovePlayer"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="150"
                    Height="40"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="Red"
                    BorderBrush="Transparent"
                    Command="{Binding RemovePlayerCmd}"
                    Content="Ta bort spelare"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    Visibility="{Binding ShowList}">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20" />
                        </Style>
                    </Button.Resources>
                </Button>

                <Button
                    Width="150"
                    Height="40"
                    Margin="0,0,0,10"
                    Background="ForestGreen"
                    BorderBrush="Transparent"
                    Command="{Binding StartGameCmd}"
                    Content="Spela"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    IsEnabled="{Binding CanStart}">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20" />
                        </Style>
                    </Button.Resources>
                </Button>

                <Button
                    Width="150"
                    Height="40"
                    Margin="0,0,0,50"
                    VerticalAlignment="Bottom"
                    Background="Orange"
                    BorderBrush="Transparent"
                    Command="{Binding HighScoreCmd}"
                    Content="Visa topplista"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20" />
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>

            <StackPanel Grid.Column="2">
                <RadioButton
                    x:Name="rbtnLevelOne"
                    Grid.Row="1"
                    Margin="0,70,0,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Level 1"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    GroupName="Level"
                    IsChecked="{Binding IsLevelOneSelected}" />

                <RadioButton
                    x:Name="rbtnLevelTwo"
                    Grid.Row="1"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Level 2"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    GroupName="Level"
                    IsChecked="{Binding IsLevelTwoSelected}" />

                <RadioButton
                    x:Name="rbtnLevelThree"
                    Grid.Row="1"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Level 3"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    GroupName="Level"
                    IsChecked="{Binding IsLevelThreeSelected}" />
                <Button
                    Width="50"
                    Height="50"
                    HorizontalAlignment="right"
                    VerticalAlignment="Top"
                    Margin="0,-190,10,0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{Binding RulesCmd}"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White">
                    <Button.Content>
                        <Image Source="/Assets/ViewDesign/infoicon.png" Stretch="Uniform" />
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>