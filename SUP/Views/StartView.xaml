<UserControl
    x:Class="SUP.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SUP.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Name="border"
                            Width="130"
                            Height="40"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#FFE4A7C3"
                            BorderThickness="2"
                            CornerRadius="30">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="Purple" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ViewDesign/background.png" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>

        <Image
            Grid.Row="0"
            Grid.RowSpan="3"
            MaxWidth="300"
            MaxHeight="80"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/Assets/ViewDesign/memorylogo.png" />


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <RadioButton
                    x:Name="rbtnSingle"
                    Grid.Row="1"
                    Margin="0,70,0,5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="En spelare"
                    FlowDirection="RightToLeft"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    GroupName="Multiplayer"
                    IsChecked="{Binding IsSinglePlayerSelected}" />

                <RadioButton
                    x:Name="rbtnMulti"
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Två spelare"
                    FlowDirection="RightToLeft"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    GroupName="Multiplayer"
                    IsChecked="{Binding IsMultiplayerSelected}" />

                <ListBox
                    x:Name="lstPlayers"
                    Grid.Row="1"
                    Width="Auto"
                    HorizontalAlignment="Right"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="18"
                    Foreground="Purple"
                    ItemsSource="{Binding PlayerList}"
                    Visibility="{Binding ShowList}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>


            <StackPanel Grid.Row="0" Grid.Column="1">
                <TextBlock
                    Margin="15,30,15,10"
                    HorizontalAlignment="Center"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="25"
                    Foreground="White"
                    Text="{Binding Greeting, UpdateSourceTrigger=PropertyChanged, FallbackValue=Spelarnamn:}"
                    TextWrapping="Wrap" />

                <TextBox
                    x:Name="txtPlayerName"
                    Height="40"
                    Margin="20,0,20,10"
                    HorizontalAlignment="Stretch"
                    Background="FloralWhite"
                    BorderBrush="HotPink"
                    FontSize="20"
                    Text="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    x:Name="btnAddPlayer"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="DodgerBlue"
                    Command="{Binding AddPlayerCmd}"
                    Content="Lägg till spelare"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    Visibility="{Binding ShowList}" />



                <Label
                    Width="auto"
                    Margin="0,-40,0,0"
                    HorizontalAlignment="Center"
                    Content="{Binding PlayerNameMessage}"
                    Foreground="MediumVioletRed" />

                <Label
                    Width="auto"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Content="{Binding MultiPlayerNameMessage}"
                    Foreground="MediumVioletRed" /> 

            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0,225,0,0">
                <Button
                    Width="150"
                    Height="40"
                    Margin="0,0,0,10"
                    Background="ForestGreen"
                    BorderBrush="Transparent"
                    Click="Button_Click_1"
                    Command="{Binding StartGameCmd}"
                    Content="Spela"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    IsEnabled="{Binding CanStart}" />

                <Button
                    Width="150"
                    Height="40"
                    Margin="0,0,0,50"
                    VerticalAlignment="Bottom"
                    Background="Orange"
                    BorderBrush="Transparent"
                    Command="{Binding HighScoreCmd}"
                    Content="Visa topplista"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White" />
            </StackPanel>
            <StackPanel Grid.Column="2">
                <RadioButton
                    x:Name="rbtnLevelOne"
                    Grid.Row="1"
                    Margin="0,70,0,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Level 1"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    GroupName="Level"
                    IsChecked="{Binding IsLevelOneSelected}" />

                <RadioButton
                    x:Name="rbtnLevelTwo"
                    Grid.Row="1"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Level 2"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    GroupName="Level"
                    IsChecked="{Binding IsLevelTwoSelected}" />

                <RadioButton
                    x:Name="rbtnLevelThree"
                    Grid.Row="1"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Level 3"
                    FontFamily="Bahnschrift Condensed"
                    FontSize="16"
                    Foreground="White"
                    GroupName="Level"
                    IsChecked="{Binding IsLevelThreeSelected}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>