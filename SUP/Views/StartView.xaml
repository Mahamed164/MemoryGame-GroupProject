<UserControl
    x:Class="SUP.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#FFE689B4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            FontSize="20"
            Text="{Binding Greeting, UpdateSourceTrigger=PropertyChanged, FallbackValue=Spelarnamn:}" />
        <TextBox
            Grid.Row="1"
            Width="150"
            Height="40"
            Margin="0,0,0,200"
            HorizontalAlignment="Center"
            FontSize="20"
            Text="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Grid.Row="1"
            Width="150"
            Height="40"
            Margin="0,0,0,95"
            Background="ForestGreen"
            Command="{Binding StartGameCmd}"
            Content="Spela" />
        <Button
            Grid.Row="1"
            Width="150"
            Height="40"
            Background="Orange"
            Command="{Binding HighScoreCmd}"
            Content="Visa topplista" />
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="32"
            Text="Memory" />
        <RadioButton
            x:Name="rbtnLevelOne"
            Grid.Row="1"
            Margin="584,54,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Level 1"
            IsChecked="{Binding IsLevelOneSelected}" />
        <RadioButton
            x:Name="rbtnLevelTwo"
            Grid.Row="1"
            Margin="584,76,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Level 2"
            IsChecked="{Binding IsLevelTwoSelected}" />
        <RadioButton
            x:Name="rbtnLevelThree"
            Grid.Row="1"
            Margin="584,102,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Level 3"
            IsChecked="{Binding IsLevelThreeSelected}" />


    </Grid>
</UserControl>
