<UserControl
    x:Class="SUP.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#FFE689B4">
        <TextBlock
            Width="255"
            Height="93"
            Margin="76,93,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="20"
            Text="{Binding Greeting, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <TextBox
            Width="148"
            Height="62"
            Margin="105,192,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <Button
            Width="144"
            Height="75"
            Margin="385,180,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding StartGameCmd}"
            Content="Start Game" />
        <TextBlock
            Width="421"
            Height="87"
            Margin="180,38,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="30"
            Text="Welcome To Memory Game"
            TextWrapping="Wrap" />

    </Grid>
</UserControl>
