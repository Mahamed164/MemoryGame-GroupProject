<UserControl
    x:Class="SUP.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="#FFE689B4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            FontSize="20"
            Text="{Binding Greeting, UpdateSourceTrigger=PropertyChanged, FallbackValue=Spelarnamn:}"
            Foreground="White"/>

        <TextBox
            x:Name="txtPlayerName"
            Grid.Row="1"
            Width="150"
            Height="40"
            Margin="0,0,0,200"
            HorizontalAlignment="Center"
            FontSize="20"
            Text="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}" />

        <Button
            Grid.Row="1"
            Width="150"
            Height="40"
            Margin="0,0,0,95"
            Background="ForestGreen"
            Command="{Binding StartGameCmd}"
            Content="Spela"
            IsEnabled="{Binding CanStart}"
            BorderBrush="Transparent"/>

        <Button
            Grid.Row="1"
            Width="150"
            Height="40"
            Background="Orange"
            Command="{Binding HighScoreCmd}"
            Content="Visa topplista"
            BorderBrush="Transparent"/>

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="48"
            Text="Memory" Foreground="White" FontFamily="Bernard MT Condensed" />

        <RadioButton
            x:Name="rbtnLevelOne"
            Grid.Row="1"
            Margin="584,54,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Level 1"
            GroupName="Level"
            IsChecked="{Binding IsLevelOneSelected}"
            Foreground="White"/>

        <RadioButton
            x:Name="rbtnLevelTwo"
            Grid.Row="1"
            Margin="584,76,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Level 2"
            GroupName="Level"
            IsChecked="{Binding IsLevelTwoSelected}"
            Foreground="White"/>

        <RadioButton
            x:Name="rbtnLevelThree"
            Grid.Row="1"
            Margin="584,102,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Level 3"
            GroupName="Level"
            IsChecked="{Binding IsLevelThreeSelected}"
            Foreground="White"/>

        <RadioButton
            x:Name="rbtnSingle"
            Grid.Row="1"
            Margin="161,54,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="En spelare"
            GroupName="Multiplayer"
            IsChecked="{Binding IsSinglePlayerSelected}"
            Foreground="White"/>

        <RadioButton
            x:Name="rbtnMulti"
            Grid.Row="1"
            Margin="161,80,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Två spelare"
            GroupName="Multiplayer"
            IsChecked="{Binding IsMultiplayerSelected}"
            Foreground="White"/>

        <ListBox
            x:Name="lstPlayers"
            Grid.Row="1"
            Margin="144,112,548,169"
            ItemsSource="{Binding PlayerList}"
            Visibility="{Binding ShowList}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button
            x:Name="btnAddPlayer"
            Grid.Row="1"
            Margin="480,58,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding AddPlayerCmd}"
            Content="Lägg till spelare"
            Visibility="{Binding ShowList}" />

    </Grid>
</UserControl>