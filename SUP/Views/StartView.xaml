<UserControl
    x:Class="SUP.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SUP.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="#FFE689B4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontFamily="Bernard MT Condensed"
            FontSize="48"
            Foreground="White"
            Text="Memory" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <RadioButton
                    x:Name="rbtnSingle"
                    Grid.Row="1"
                    Margin="0,70,0,5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="En spelare"
                    FlowDirection="RightToLeft"
                    Foreground="White"
                    GroupName="Multiplayer"
                    IsChecked="{Binding IsSinglePlayerSelected}" />

                <RadioButton
                    x:Name="rbtnMulti"
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Två spelare"
                    FlowDirection="RightToLeft"
                    Foreground="White"
                    GroupName="Multiplayer"
                    IsChecked="{Binding IsMultiplayerSelected}" />

                <ListBox
                    x:Name="lstPlayers"
                    Grid.Row="1"
                    Width="Auto"
                    HorizontalAlignment="Right"
                    BorderBrush="HotPink"
                    FontSize="20"
                    ItemsSource="{Binding PlayerList}"
                    Visibility="{Binding ShowList}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            

            <StackPanel Grid.Row="0" Grid.Column="1">
                <TextBlock
                    
                    TextWrapping="Wrap"
                    Margin="15,30,15,10"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="White"
                    Text="{Binding Greeting, UpdateSourceTrigger=PropertyChanged, FallbackValue=Spelarnamn:}" />

                <TextBox
                    x:Name="txtPlayerName"
                    Height="40"
                    Margin="20,0,20,10"
                    HorizontalAlignment="Stretch"
                    BorderBrush="HotPink"
                    FontSize="20"
                    Text="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    x:Name="btnAddPlayer"
                    Grid.Row="1"
                    Margin="0,0,0,100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Command="{Binding AddPlayerCmd}"
                    Content="Lägg till spelare"
                    Visibility="{Binding ShowList}" />
                
                
                
                <Label Content="LABEL" Margin="0,-100,0,0" HorizontalAlignment="Center" />

            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                <Button
                    Width="150"
                    Height="40"
                    Margin="0,0,0,10"
                    Background="ForestGreen"
                    BorderBrush="Transparent"
                    Command="{Binding StartGameCmd}"
                    Content="Spela"
                    FontFamily="Bernard MT Condensed"
                    Foreground="White"
                    IsEnabled="{Binding CanStart}" />

                <Button
                    Margin="0,0,0,50"
                    Width="150"
                    Height="40"
                    VerticalAlignment="Bottom"
                    Background="Orange"
                    BorderBrush="Transparent"
                    Command="{Binding HighScoreCmd}"
                    Content="Visa topplista"
                    FontFamily="Bernard MT Condensed"
                    Foreground="White" />
            </StackPanel>
            <StackPanel Grid.Column="2">
                <RadioButton
                    x:Name="rbtnLevelOne"
                    Grid.Row="1"
                    Margin="0,70,0,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Level 1"
                    Foreground="White"
                    GroupName="Level"
                    IsChecked="{Binding IsLevelOneSelected}" />

                <RadioButton
                    x:Name="rbtnLevelTwo"
                    Grid.Row="1"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Level 2"
                    Foreground="White"
                    GroupName="Level"
                    IsChecked="{Binding IsLevelTwoSelected}" />

                <RadioButton
                    x:Name="rbtnLevelThree"
                    Grid.Row="1"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="HotPink"
                    Content="Level 3"
                    Foreground="White"
                    GroupName="Level"
                    IsChecked="{Binding IsLevelThreeSelected}" />
            </StackPanel>
        </Grid>










    </Grid>
</UserControl>