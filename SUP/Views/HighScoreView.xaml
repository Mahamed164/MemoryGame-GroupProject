<UserControl
    x:Class="SUP.Views.HighScoreView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ViewDesign/background.png" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Orientation="Horizontal">

            <TextBlock
                Margin="0,0,30,0"
                FontFamily="Bahnschrift Condensed"
                FontSize="40"
                Foreground="White"
                Text="Topplista" />

            <TextBlock
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                FontFamily="Bahnschrift Condensed"
                FontSize="20"
                Foreground="White"
                Text="Level:" />

            <ComboBox
                x:Name="CBLevel"
                Width="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DisplayMemberPath="Level"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding Path=AllHighScores}"
                SelectedItem="{Binding CurrentHighScoreList}" />
            <!--
                https://learn.microsoft.com/en-us/dotnet/desktop/wpf/data/
                https://stackoverflow.com/questions/2305179/what-are-the-various-wpf-binding-modes
            -->


        </StackPanel>




        <ListView
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            FontSize="20"
            ItemsSource="{Binding CurrentHighScoreList}">

            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFFB2E3" Offset="0"/>
                                <GradientStop Color="#FFFF82D2" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.Resources>
            
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="150"
                        DisplayMemberBinding="{Binding Nickname}"
                        Header="Spelarnamn" />
                    <GridViewColumn
                        Width="150"
                        DisplayMemberBinding="{Binding Moves}"
                        Header="Drag" />
                    <GridViewColumn
                        Width="150"
                        DisplayMemberBinding="{Binding Misses}"
                        Header="Missar" />
                    <GridViewColumn
                        Width="150"
                        DisplayMemberBinding="{Binding TimerText}"
                        Header="Tid" />
                </GridView>
            </ListView.View>
        </ListView>

        <Button 
            Grid.Row="2"
            Width="150"
            Height="40"
            Margin="10,7,10,10"
            Padding="20,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="ForestGreen"
            Command="{Binding ReturnCmd}"
            Content="Tillbaka till spelet"
            FontFamily="Bahnschrift Condensed"
            FontSize="16"
            Foreground="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20" />
                </Style>       
            </Button.Resources>
        </Button>
            
            

        
        

    </Grid>
</UserControl>