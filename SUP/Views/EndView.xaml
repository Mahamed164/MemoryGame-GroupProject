<UserControl
    x:Class="SUP.Views.EndView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#FFE689B4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="32"
            Text="Memory" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock FontSize="25">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Du hittade alla kort med {0} missar på {1} drag!">
                        <Binding FallbackValue="77" Path="Missed" />
                        <Binding FallbackValue="190" Path="Moves" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="100"
                Height="40"
                Background="CornflowerBlue"
                Command="{Binding SaveScoreCmd}"
                Content="Spara resultat" />
            <Button
                Width="100"
                Height="40"
                Margin="30"
                Background="ForestGreen"
                Command="{Binding RestartCmd}"
                Content="Spela igen" />
        </StackPanel>


    </Grid>
</UserControl>
