            Grid.Row="2"
            Width="100"
            Height="40"
            Margin="5"
            HorizontalAlignment="left"
            Background="CornflowerBlue"
            Command="{Binding BackToStartCmd}"
            Content="Startmeny"
            FontFamily="Bahnschrift Condensed"
            FontSize="16"
            Foreground="White" />
