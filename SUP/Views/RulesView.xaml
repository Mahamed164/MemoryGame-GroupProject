<UserControl
    x:Class="SUP.Views.RulesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SUP.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ViewDesign/background.png" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Orientation="Horizontal">

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontFamily="Bahnschrift Condensed"
                FontSize="40"
                Foreground="White"
                Text="Regler" />
        </StackPanel>

        <Button
            Grid.Row="2"
            Width="150"
            Height="40"
            Margin="10,7,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="CornflowerBlue"
            Command="{Binding BackToStartCmd}"
            Content="Startmeny"
            FontFamily="Bahnschrift Condensed"
            FontSize="16"
            Foreground="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20" />
                </Style>
            </Button.Resources>
        </Button>
        <!--<Button 
      Grid.Row="2"
      Width="150"
      Height="40"
      Margin="10,7,10,10"
      Padding="20,0"
      HorizontalAlignment="Right"
      VerticalAlignment="Center"
      Background="ForestGreen"
      Command="{Binding ReturnCmd}"
      Content="Tillbaka till spelet"
      FontFamily="Bahnschrift Condensed"
      FontSize="16"
      Foreground="White">-->


            <TextBlock
            Grid.Row="1"
            Width="300"
            Height="340"
            Margin="330,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            Opacity="0.4">
            <!--  https://stackoverflow.com/questions/26337355/textblock-text-with-multiple-font-properties  -->
            <Run
                FontSize="18"
                FontWeight="Bold"
                Text=" Regler för Memory" />
            <Run
                FontSize="14"
                FontWeight="SemiBold"
                Text="&#x0a;&#x0a; • Vänd två kort per drag&#x0a; • Om korten matchar får du behålla paret&#x0a; • Om korten inte matchar vänds de tillbaka&#x0a; • Spelet är slut när du har vänt upp alla kort&#x0a;&#x0a; • Placeringen i topplistan baseras på:&#x0a;      1. Minst antal drag&#x0a;      2. Minst antal missade drag&#x0a;      3. Kortast tid&#x0a;&#x0a; • I multiplayer är vinnaren den med högst&#x0a;   precision, och vid lika den med färre antal&#x0a;   drag" />

        </TextBlock>
        <TextBlock
            Grid.Row="1"
            Width="300"
            Height="340"
            Margin="0,0,330,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            Opacity="0.4">
            <Run
                FontSize="18"
                FontWeight="Bold"
                Text=" Hur man börjar spela" />
            <Run
                FontSize="14"
                FontWeight="SemiBold"
                Text="&#x0a;&#x0a; 1. Välj antal spelare&#x0a; 2. Välj svårighetsgrad (12, 20, eller 30 kort)&#x0a; 3. Skriv in spelarnamn&#x0a; 4. Klicka på 'Spela' för att starta!  &#x0a;"/>
        </TextBlock>
    </Grid>
</UserControl>