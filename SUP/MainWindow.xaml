<Window
    x:Class="SUP.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SUP.Views.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gameView="clr-namespace:SUP.Views"
    xmlns:local="clr-namespace:SUP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SUP.ViewModels"
    Title="Memory"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance Type=vm:MainShellViewModel}"
    mc:Ignorable="d">

    <Window.Resources>
        <converters:BoolToIconConverter
            x:Key="BoolToIconConverter"
            OffUri="Assets/Sounds/SoundPng/soundOff.png"
            OnUri="Assets/Sounds/SoundPng/soundOn.png" />

    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentView}" />



        <StackPanel Grid.Row="0" Orientation="Horizontal">

            <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">
                <ToggleButton
                    Width="36"
                    Height="36"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    IsChecked="{Binding MusicMuted, Mode=TwoWay}">
                    <Image Source="{Binding MusicMuted, Converter={StaticResource BoolToIconConverter}}" />
                </ToggleButton>

                <Slider
                    Width="140"
                    Height="20"
                    Background="Transparent"
                    BorderBrush="RosyBrown"
                    Foreground="RosyBrown"
                    Maximum="1"
                    Minimum="0"
                    Value="{Binding MusicVolume, Mode=TwoWay}" />
            </StackPanel>

        </StackPanel>



    </Grid>

</Window>
