<Window
    x:Class="SUP.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SUP.ViewModels"
    xmlns:gameView="clr-namespace:SUP.Views"
    Title="Memory"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance Type=vm:MainShellViewModel}"
    mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:StartViewModel}">
            <gameView:StartView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MemoryBoardViewModel}">
            <gameView:BoardView />
        </DataTemplate>
        
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentView}" />
        
    </Grid>
</Window>
